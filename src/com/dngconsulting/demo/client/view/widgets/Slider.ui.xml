<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.dngconsulting.demo.client.resources.AppMessage" field="i18n"></ui:with>
	<ui:with type="com.dngconsulting.demo.client.resources.img.AppImage" field="img"></ui:with>
	<g:HTMLPanel>
		<section class="slider"><!--slider-->
			<div class="container">
				<div class="row">
					<div class="col-sm-12">
						<div class="carousel slide" data-ride="carousel">
							<div class="carousel-inner">
								<div class="item active">
									<div class="col-sm-6">
										<h1><span>E</span>-SHOPPER</h1>
										<h2><ui:text from="{i18n.home_slider_title}"/></h2>
										<p><ui:text from="{i18n.home_slider_message}"/> </p>
										
									</div>
									<div class="col-sm-6">
										<g:Image resource="{img.girl1}" styleName="girl img-responsive"></g:Image>
										<g:Image resource="{img.pricing}" styleName="pricing"></g:Image>
									</div>
								</div>
								
							</div>
							
						</div>
						
					</div>
				</div>
			</div>
		</section><!--/slider-->
		
	</g:HTMLPanel>
</ui:UiBinder> 